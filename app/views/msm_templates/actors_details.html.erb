<h1>Actor #<%= @the_actor.id %> details</h1>

<a href="/actors">Go back</a>
<hr>
<dl>
  <dt>Name</dt>
  <dd><%= @the_actor.name %></dd>
  <dt>Dob</dt>
  <dd><%= @the_actor.dob %></dd>
  <dt>Bio</dt>
  <dd><%= @the_actor.bio %></dd>
  <dt>Image</dt>
  <dd><img src="<%= @the_actor.image %>" width= "250px"></dd>
  <dt>Create at</dt>
  <dd><%= @the_actor.created_at %></dd>
  <dt>Updated at</dt>
  <dd><%= @the_actor.updated_at %></dd>
</dl>

<% matching_movies = Movie.where({ :actor_id => @the_actor.id })%>

<hr>
<h2>Filmography</h2>
<table border="1">
  <tbody>
    <tr>
      <th>Title</th>
      <th>Year</th>
      <th>Director</th>
      <th>Character name</th>
      <th> </th>
    </tr>

  <% matching_movies.each do |a_movie| %> 
    <tr>
      <td><%= a_movie.title%></td>
      <td><%= a_movie.year%></td>
      <td><%=  %></td>
      <td><%=  %></td>
      <td><a href="/movies/<%= a_movie.id %>">Show details</a></td>
    </tr>
    <% end %>

  </tbody>
</table>
